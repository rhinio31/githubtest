# --- Custom Git Bash Prompt showing AWS profile ---

# Define a function to build the prompt dynamically
set_prompt() {
  local aws_part=""
  if [ -n "$AWS_DEFAULT_PROFILE" ]; then
    aws_part="(${AWS_DEFAULT_PROFILE})"
  fi

  PS1="[\u@\h:\W ${aws_part}]\$ "
}

# Run it before every command
PROMPT_COMMAND=set_prompt
